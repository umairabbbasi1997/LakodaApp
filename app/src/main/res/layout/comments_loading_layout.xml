<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/v_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <View
        android:id="@+id/v_name"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginLeft="6dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="@id/v_user"
        app:layout_constraintBottom_toTopOf="@id/v_comment"
        app:layout_constraintLeft_toRightOf="@id/v_user"
        >

    </View>
    <View
        android:id="@+id/v_comment"
        android:layout_width="200dp"
        android:layout_height="12dp"
        android:layout_marginLeft="6dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/v_name"
        app:layout_constraintBottom_toBottomOf="@id/v_user"
        app:layout_constraintLeft_toRightOf="@id/v_user"
        >

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>