<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </View>

    <View
        android:id="@+id/v_name"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_marginLeft="6dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="@id/v_user"
        app:layout_constraintBottom_toTopOf="@id/v_follow"
        app:layout_constraintLeft_toRightOf="@id/v_user"
        >

    </View>

    <View
        android:id="@+id/v_follow"
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_marginLeft="6dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/v_name"
        app:layout_constraintBottom_toBottomOf="@id/v_user"
        app:layout_constraintLeft_toRightOf="@id/v_user"
        >

    </View>


    <View
        android:id="@+id/v_reject"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/v_user"
        app:layout_constraintLeft_toRightOf="@id/v_user"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </View>

    <View
        android:id="@+id/v_accept"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/v_user"
        app:layout_constraintLeft_toRightOf="@id/v_reject"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </View>
</androidx.constraintlayout.widget.ConstraintLayout>