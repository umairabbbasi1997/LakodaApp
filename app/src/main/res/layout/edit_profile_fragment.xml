            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_location_city_24"
                android:layout_marginRight="12dp"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_phone"

                >

            </ImageView>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="13sp"
                android:layout_marginLeft="24dp"
                app:layout_constraintTop_toBottomOf="@id/et_phone"
                app:layout_constraintLeft_toRightOf="@id/iv_city"
                app:layout_constraintRight_toRightOf="parent"
                android:text="City"
                >

            </TextView>

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingLeft="40dp"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_city"
                >

            </EditText>

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"
                android:layout_marginRight="12dp"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_username"
                >

            </ImageView>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintTop_toBottomOf="@id/et_username"
                app:layout_constraintLeft_toRightOf="@id/iv_phone"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/phone_number"
                >

            </TextView>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:inputType="number"
                android:nextFocusDown="@id/et_pass"
                android:paddingLeft="40dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@id/ccp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone"
                >

            </EditText>
            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_showFlag="false"
                app:ccp_dialogTextColor="@color/black"
                app:ccp_textColor="@color/white"
                app:ccp_defaultNameCode="us"
                app:layout_constraintTop_toTopOf="@id/et_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/et_phone"
                app:layout_constraintBottom_toBottomOf="@id/et_phone"
                />

