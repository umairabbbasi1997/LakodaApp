                android:paddingLeft="40dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_pass"
                >

            </EditText>

            <ImageView
                android:id="@+id/iv_show_repeat_pass"
                android:layout_width="wrap_content"
